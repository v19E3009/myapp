<h2><%= @post.title %></h2>
<div class="text-right"><%= current_user.display_name %></div>
<p><%= simple_format @post.body %></p>

<h3>Comment</h3>
<% if @post.comments.any? %>
<ul>
    <% @post.comments.each do |comment| %>
        <li><%= comment.body %></li>
    <% end %>
</ul>
<% end %>

<%= form_for [@post, @post.comments.build] do |f| %>
<p>
    <%= f.text_field :body %>
</p>
<p>
    <%= f.submit %>
</p>
<% end %>